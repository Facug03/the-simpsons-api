generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Character {
  id Int @default(autoincrement()) @id
  name String @unique
  birthdate String
  description String
  occupation String
  catchphrases String[]
  age Int
  status String
  gender Gender
  quotes String[]
  portrait_img String
  full_body_image String
}

enum Gender {
  Male
  Female
}