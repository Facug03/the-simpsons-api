generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Character {
  id Int @default(autoincrement()) @id
  age Int?
  birthdate String?
  description String
  first_appearance Episode? @relation(fields: [first_appearance_ep_id], references: [id])
  first_appearance_ep_id Int?
  first_appearance_sh_id Int?
  gender Gender
  name String @unique
  occupation String
  phrases String[]
  portrait_path String
  status String
}

// quotes and catchphrases in another db?

enum Gender {
  Male
  Female
  Unknown
}

model Location {
  id Int @default(autoincrement()) @id
  description String
  first_appearance Episode? @relation(fields: [first_appearance_sh_id], references: [id])
  first_appearance_ep_id Int?
  first_appearance_sh_id Int?
  image_path String
  name String @unique
  town String
  use String
}

model Episode {
  id Int @default(autoincrement()) @id
  airdate String
  characters Character[]
  description String
  episode_number Int
  image_path String
  locations Location[]
  name String @unique
  season Int
  synopsis String
}