generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Character {
  id Int @default(autoincrement()) @id
  age Int
  birthdate String
  catchphrases String[]
  description String
  first_appearance Episode @relation(fields: [first_appearance_id], references: [id])
  first_appearance_id Int
  full_body_image String
  gender Gender
  name String @unique
  occupation String
  portrait_img String
  quotes String[]
  status String
}

// quotes and catchphrases in another db?

enum Gender {
  Male
  Female
}

model Location {
  id Int @default(autoincrement()) @id
  address String
  description String
  first_appearance Episode @relation(fields: [first_appearance_id], references: [id])
  first_appearance_id Int
  image_url String
  name String @unique
  town String
  use String
}

model Episode {
  id Int @default(autoincrement()) @id
  characters Character[]
  description String
  episode_number Int
  image_url String
  locations Location[]
  name String @unique
  airdate String
  season Int
  synopsis String
}